<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_skin_imageView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:src="@drawable/pill"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="심각도"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/result_serious_imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:src="@drawable/pill" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/result_type_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="화이트헤드(Whitehead)"
            android:textSize="15dp"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_cure_textView"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 스팀타월로 모공 열어주기 \n2. 클랜징 오일 세안하기(식물성 오일 추천) \n3. 모공 수축팩 사용" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/result_resalve_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="연고 추천"
            android:textSize="15dp"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/result_salve_textView"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 바르는 약 \n- 먹는 약" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorDarkGray"/>

</LinearLayout>


